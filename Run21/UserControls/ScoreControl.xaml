<UserControl x:Class="Run21.UserControls.ScoreControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="50" d:DesignWidth="100">
    
   
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <StackPanel>
             <Path Data="M8,5 L92,5" Fill="#FFF4F4F5" Height="1" Margin="8,0,7,0" Stretch="Fill" Stroke="White" UseLayoutRounding="False"/>
            <TextBlock FontSize="26" FontWeight="Bold" Text="0" Name="scoreText" Foreground="White" HorizontalAlignment="Center" />
           
        </StackPanel>
        </Grid>
    
</UserControl>
