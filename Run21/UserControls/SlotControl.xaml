<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:custom="clr-namespace:Run21.UserControls"
    xmlns:Run21="clr-namespace:Run21" x:Class="Run21.UserControls.SlotControl"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="300" d:DesignWidth="80">
    
    <Canvas x:Name="MainRoot" Background="Transparent">
        <Border BorderThickness="2" BorderBrush="White" x:Name="theBorder">
        <Canvas x:Name="LayoutRoot"  Background="Transparent" Canvas.Top="50" Height="141" Width="101">
        
</Canvas>
        </Border>

        <custom:ScorePopper x:Name="scorePopper1" HandScore="0" Canvas.Left="35" />

        <Run21:BustControl x:Name="bustControl" Canvas.Left="19" Canvas.Top="18" d:LayoutOverrides="Width, Height" Visibility="Collapsed"/>

    </Canvas>
</UserControl>
